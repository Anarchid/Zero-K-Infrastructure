<UserControl x:Class="ZeroKLobby.NavigationControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:MicroLobby="clr-namespace:ZeroKLobby.MicroLobby" xmlns:LuaMgr="clr-namespace:ZeroKLobby.LuaMgr" xmlns:MapDownloader="clr-namespace:ZeroKLobby.MapDownloader"
        xmlns:ZeroKLobby="clr-namespace:ZeroKLobby" mc:Ignorable="d" d:DesignHeight="294" d:DesignWidth="954" Loaded="UserControl_Loaded" x:Name="userControl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Black" Height="60">
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="SakGuiResources.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </Grid.Resources>
            <Button Click="StartPage_Click" Margin="0,1,0,0">Start</Button>
            <Button Click="BattleListPage_Click" Margin="67,1,0,0">Battles</Button>
            <Button  Click="MissionsPage_Click" Margin="200,1,0,0">Missions (ALPHA)</Button>
            <Button  Click="ChatPage_Click" Margin="134,1,0,0">Chat</Button>
            <Button  Click="HelpPage_Click" Margin="529,1,0,0">Help</Button>
            <Button  Click="WidgetsPage_Click" Margin="313,1,0,0">Widgets</Button>
            <Button Click="DownloaderPage_Click" Margin="380,1,0,0">Downloader</Button>
            <Button Click="SettingsPage_Click" Margin="464,1,0,0">Settings</Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Width="20" x:Name="backButton" Grid.Column="0" Click="backButton_Click" Background="Black" Foreground="White">&lt;</Button>
            <Button Width="20" x:Name="forwardButton" Grid.Column="1" Click="forwardButton_Click" Background="Black" Foreground="White">&gt;</Button>
            <ZeroKLobby:SubmitTextBox Grid.Column="2" Text="{Binding Path, ElementName=userControl}" Background="Black" Foreground="White" />
        </Grid>
        <TabControl Grid.Row="2" x:Name="tabControl" SelectionChanged="tabControl_SelectionChanged">
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <EventSetter Event="MouseUp" Handler="TabItem_MouseUp" />
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </TabControl.ItemContainerStyle>
            <TabItem>
                <WindowsFormsHost>
                    <MicroLobby:StartPage />
                </WindowsFormsHost>
            </TabItem>
            <TabItem >
                <WindowsFormsHost>
                    <MicroLobby:BattleListTab />
                </WindowsFormsHost>
            </TabItem>
            <TabItem>
                <WindowsFormsHost>
                    <MicroLobby:ChatTab x:Name="chatTab" />
                </WindowsFormsHost>
            </TabItem>
            <TabItem>
                <WindowsFormsHost>
                    <LuaMgr:LuaMgrTab />
                </WindowsFormsHost>
            </TabItem>
            <TabItem>
                <WindowsFormsHost>
                    <MapDownloader:DownloaderTab />
                </WindowsFormsHost>
            </TabItem>
            <TabItem >
                <WindowsFormsHost>
                    <MicroLobby:SettingsTab />
                </WindowsFormsHost>
            </TabItem>
            <TabItem>
                <WindowsFormsHost>
                    <MicroLobby:HelpControl />
                </WindowsFormsHost>
            </TabItem>
            <TabItem>
                <WindowsFormsHost>
                    <MicroLobby:ServerTab />
                </WindowsFormsHost>
            </TabItem>
            <TabItem>
                <MicroLobby:BrowserControl x:Name="browserControl"/>
            </TabItem>
        </TabControl>
    </Grid>

</UserControl>
