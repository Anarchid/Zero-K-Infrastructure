<UserControl x:Class="ZeroKLobby.MicroLobby.ChatTab2" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:ZeroKLobby="clr-namespace:ZeroKLobby" mc:Ignorable="d" d:DesignHeight="300"
        d:DesignWidth="300" UseLayoutRounding="True">
    <UserControl.Resources>
        <ZeroKLobby:UserToIconConverter x:Key="userToIconConverter" />
        <DataTemplate x:Key="channelTabHeaderTemplate">
            <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem} }}" Orientation="Horizontal">
                <Image Width="16" Height="16" Source="pack://application:,,,/Zero-K;component/Resources/chat.png" />
                <Label Content="{Binding Header.Name}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="gameTabHeaderTemplate">
            <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem} }}" Orientation="Horizontal">
                <Image Width="16" Height="16" Source="pack://application:,,,/Zero-K;component/Resources/game.png" />
                <Label Content="{Binding Header.GameInfo.FullName}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="pmTabHeaderTemplate">
            <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem} }}" Orientation="Horizontal">
                <Image Width="16" Height="16"
                        Source="{Binding Header.UserName, Converter={StaticResource userToIconConverter}}" />
                <Label Content="{Binding Header.UserName}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="battleTabHeaderTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" MouseRightButtonUp="BattleTab_MouseRightButtonUp">
                <Image Width="16" Height="16" Source="pack://application:,,,/Zero-K;component/Resources/battle.png" />
                <Label>Battle</Label>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <TabControl x:Name="tabControl" TabStripPlacement="Left">               
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="HeaderTemplateSelector">
                        <Setter.Value>
                            <ZeroKLobby:TabItemHeaderSelector />
                        </Setter.Value>                        
                    </Setter>
                </Style>
            </TabControl.ItemContainerStyle>
        </TabControl>
    </Grid>
</UserControl>
