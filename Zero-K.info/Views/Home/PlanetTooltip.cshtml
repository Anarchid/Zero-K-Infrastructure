@using ZkData
@using ZeroKWeb
@model Planet
@{
    var colorStyle = "";
    if (Model.Faction != null)
    {
        colorStyle = "color:" + Model.Faction.Color + ";";
    }
}
<b style="@(colorStyle)">
    @if (Model.Faction != null) {
              @Html.PrintFaction(Model.Faction, false)
    } 
    @Model.Name
</b>
<table><tr>
<td>@Html.Partial("PlanetIcon", Model)</td>
<td>
@Html.Partial("MapInfoBox",Model.Resource)
</td>
</tr></table>
<small>
@Html.Partial("PlanetSummary", Model)

@Html.Partial("PlanetDropships", Model)
@Html.Partial("InfluenceListShort", Model.PlanetFactions)
</small>
