@using ZkData
@model Planet
@{         
  var planetIconUrl = "/img/planets/" + Model.Resource.MapPlanetWarsIcon;
  var size = Model.Resource.PlanetWarsIconSize;
}
<span style='width: @(size)px; height:@(size)px; display: inline-block;'>
  <img src='@planetIconUrl' width='@size' style='position:absolute' />
  @foreach (var s in Model.PlanetStructures) {
    <img src='@s.GetImageUrl()' width='@size' style='position:absolute' />
  }
</span>