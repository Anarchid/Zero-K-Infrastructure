@using ZeroKWeb

@if (!(Global.IsAccountAuthorized)) {
  <!login> 
  <form method="post" action="@Url.Action("Logon", "Home")" >
  Name:
  <input type="text" name="login" />
  &nbsp;&nbsp; Password:
  <input type="password" name="password" />
  &nbsp;&nbsp;
  <input type="image" value="Login" src="http://zero-k.info/img/login.png" style="border:none; width:32px; height:32px; vertical-align:middle;" />
  <small>(use Zero-K lobby account)</small>
  <input type="hidden" name="referer" value="@(Request["ReturnUrl"] != null ? Request["ReturnUrl"] : Request.Url.ToString())" />
  </form>
} else {
   <form method="post" action="@Url.Action("Logout", "Home")" >@Html.PrintAccount(Global.Account) <input type="submit" value="Logout" /><input type="hidden" name="referer" value="@Request.Url" /> <b>@Html.ActionLink("PlanetWars (BETA)","Index","PlanetWars")</b> Clan: @Html.PrintClan(Global.Clan) | Credits: @Global.Account.Credits.ToString("C0") | @Html.ActionLink("Trade", "Trade", "PlanetWars", new {username = Global.Account.Name}, null) | Influence: @Html.PrintInfluence(Global.Clan, Global.Account.AccountPlanets.Sum(x => (int?)x.Influence)??0, Global.Account.AccountPlanets.Sum(x=>(int?)x.ShadowInfluence)??0)</form>
}

