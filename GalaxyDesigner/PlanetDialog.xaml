<Window x:Class="GalaxyDesigner.PlanetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlanetDialog" Height="850" Width="494">
  <StackPanel>
    <TextBlock>Name:</TextBlock> <TextBox Name="lbName" ></TextBox>
    <TextBlock>Map:</TextBlock>
    <ComboBox Name="cbMaps"></ComboBox>
    <TextBlock>Structures:</TextBlock>
    <ListBox Name="lbStructures" SelectionMode="Multiple" ></ListBox>
      

    <StackPanel Orientation="Horizontal">
    <Button Margin="10" IsDefault="True" Click="Button_Click">OK</Button>
      <Button Margin="10"  IsCancel="True" Click="Cancel_Click">Cancel</Button>
    </StackPanel>
  </StackPanel>
</Window>
